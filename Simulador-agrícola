    <script>
        const iniciarBtn = document.getElementById('iniciarBtn');
        const simuladorDiv = document.getElementById('simulador');
        const plantarBtn = document.getElementById('plantarBtn');
        const campo = document.getElementById('campo');
        const mensagem = document.getElementById('mensagem');
        const botoesDiv = document.getElementById('botoes');

        // Quando clicar em iniciar, mostrar o campo e o botão de plantar
        iniciarBtn.addEventListener('click', () => {
            simuladorDiv.style.display = 'none'; // Esconde a introdução
            campo.style.display = 'block'; // Mostra o campo
            botoesDiv.style.display = 'block'; // Mostra o botão de plantar
            mensagem.innerText = ''; // Limpa mensagens anteriores
        });

        // Quando clicar em "Plantando Semente"
        document.getElementById('plantarBtn').addEventListener('click', () => {
            mensagem.innerText = 'Semente plantada com sucesso! Agora aguarde o crescimento.';
        });
    </script>
